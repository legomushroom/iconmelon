gs = 8px
br = 3px

notyWidth = 42*gs


retina(path, size= 100%, color= white)
	background color url(path+'.png') no-repeat center center
	background-size size
	@media only screen and (-webkit-min-device-pixel-ratio: 2), (min-resolution: 144dpi)
		background color url(path+'-@2x.png') no-repeat center center
		background-size size

downShadow()
	box-shadow 0 (gs/2) 0 rgba(rgb(c-grey1), .2)

downRightShadow(size = (gs/2))
	box-shadow size size 0 rgba(rgb(c-grey1), .2)

brad(amount = br)
	border-radius amount

fontOfControl()
	font-family 'dense'
	font-size 20px
	letter-spacing 1px

t(position)
	top position

b(position)
	bottom position	

l(position)
	left position

r(position)
	right position

nw(position=0)
	top 	position
	left 	position
ne(position=0)
	top 	position 
	right 	position
sw(position=0)
	bottom 	position
	left 	position
se(position=0)
	bottom 	position
	right 	position

border(width, style= solid, color= black)
	border-width width
	border-style style
	border-color color

bbox()
	-webkit-box-sizing: border-box;
	   -moz-box-sizing: border-box;
	        box-sizing: border-box;

cbox()
	-webkit-box-sizing: content-box;
	   -moz-box-sizing: content-box;
	        box-sizing: content-box;

transform(property,property2='')
	-webkit-transform property
	-moz-transform property
	-ms-transform property
	-o-transform property
	transform property

transition(property, time, easing, delay=0)
	-webkit-transition property time easing delay
	-moz-transition property time easing delay
	-o-transition property time easing delay
	transition property time easing delay

rect(size)
	width size
	height size

min-rect(size)
	min-width size
	min-height size

hl(color, size=1px)
	outline size solid color

textel()
	white-space: nowrap
	-webkit-text-overflow: ellipsis
	-moz-text-overflow: ellipsis
	-o-text-overflow: ellipsis
	text-overflow: ellipsis
	overflow:hidden

placeholder-mixin(colorArg = c-grey3 )
	&::-webkit-input-placeholder { /* WebKit browsers */
		    color: colorArg
	}
	&:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
	    color: colorArg
	}
	&::-moz-placeholder { /* Mozilla Firefox 19+ */
	    color: colorArg
	}
	&:-ms-input-placeholder { /* Internet Explorer 10+ */
	    color: colorArg
	}

